<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activities.ForgetPasswordActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/appBarLayout"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_forget_password"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/layoutEmailForget"
        android:visibility="visible"
        android:layout_below="@+id/appBarLayout"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the email that was used for account registration for Planera, in order to get one time password on this email address."
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_margin="@dimen/fab_margin"/>


        <EditText
            style="@style/InputEditTextStyle"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="@dimen/drawable_padding"
            android:layout_width="match_parent"
            android:hint="@string/enter_your_email"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/edit_forget_email"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/icon_password" />


        <Button
            android:id="@+id/button_submit_req_for_forget"
            style="@style/ButtonText"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:text="@string/submit"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>