<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.planera.mis.planera2.ActivityUploadChemist"
    tools:showIn="@layout/activity_upload_chemist">
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_upload_chemist_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardMaxElevation="@dimen/layout_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_upload_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:text="@string/select_file" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ImageView

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icon_xls"
        android:id="@+id/image_sheet_view"/>

    <LinearLayout
        android:padding="@dimen/drawable_padding"
        android:weightSum="2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/image_sheet_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/text_file_name"
            android:layout_weight="1"
            android:text="@string/file_name"
            style="@style/LargeText"
            android:gravity="center"
            android:textColor="@color/colorGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/img_close"
            android:src="@drawable/icon_close"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/button_upload_chemist_sheet"
        android:layout_width="match_parent"
        style="@style/ButtonText"
        android:text="@string/upload"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
