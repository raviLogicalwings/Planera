<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Switch" />

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />
                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="0.5"
                    android:id="@+id/text_date_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/date"
                    android:textColor="@color/colorGray" />

                    <TextView
                        android:layout_weight="0.5"
                        android:id="@+id/text_time_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/date"
                        android:textColor="@color/colorGray" />


                </LinearLayout>




                <TextView
                    android:id="@+id/text_replace_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Replace User"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="@dimen/dimen_8dp"
                   />
                <TextView
                    android:id="@+id/text_joint_mr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MR : Name"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="@dimen/dimen_8dp"
                    />
                <TextView
                    android:id="@+id/text_joint_am_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AM : Name"
                    android:textColor="@color/colorPrimary"
                    android:paddingTop="@dimen/dimen_8dp"
                    />

                <TextView
                    android:id="@+id/text_joint_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_green_joint"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:text="Joint"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/visit_1"
                    android:paddingRight="@dimen/fab_margin"
                    android:id="@+id/text_visit_counter"/>
                <Button
                    android:id="@+id/button_edit_input"
                    android:background="@drawable/button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_28dp"
                    android:text="@string/edit"
                    android:padding="@dimen/dimen_4dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>