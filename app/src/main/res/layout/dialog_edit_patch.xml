<LinearLayout android:orientation="vertical"
    style="@style/BaseMargin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >



    <Spinner
        android:id="@+id/spinner_territory_update_patch"
        android:layout_margin="@dimen/dimen_14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        />



        <android.support.design.widget.TextInputLayout
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:id="@+id/input_layout_user_name"
            android:layout_height="wrap_content">

            <EditText

                style="@style/InputEditTextStyle"
                android:layout_width="match_parent"
                android:hint="Enter Patch Name"
                android:id="@+id/edit_text_name"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />

        </android.support.design.widget.TextInputLayout>


        <Button

            android:id="@+id/button_update_patch"
            android:padding="10dp"
            style="@style/ButtonText"
            android:background="@color/colorPrimary"
            android:layout_marginTop="30dp"
            android:layout_gravity="right"
            android:text="Add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
