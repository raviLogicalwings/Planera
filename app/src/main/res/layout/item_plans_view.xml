<android.support.v7.widget.CardView android:orientation="vertical"
    style="@style/CardView"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/layout_margin_top"
            android:layout_marginLeft="@dimen/layout_margin_top"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/colorGray"
                android:id="@+id/text_plan_patch_name"
                android:layout_width="match_parent"
                android:text="Jhon Deo"
                style="@style/LargeTextBlack"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_plan_date"
                style="@style/NormalTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView

                style="@style/NormalText"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/layout_margin_top"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content">

            <TextView
                style="@style/MediumText"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/bg_calls"
                android:id="@+id/text_plan_calls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visits : 2"/>


            <ImageView
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:padding="5dp"
                android:id="@+id/text_plan_remark"
                style="@style/NormalText"
                android:textColor="@color/colorGray"
                android:layout_gravity="center_horizontal"
                android:text="Remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
