<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:orientation="vertical"
    style="@style/CardView"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/layout_margin_top"
            android:layout_marginLeft="@dimen/layout_margin_top"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_doctor_name"
                android:layout_width="match_parent"
                android:text="Jhon Deo"
                style="@style/LargeTextBlack"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_doctor_email"
                style="@style/NormalTextBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="john.deo123@gmail.com"/>
            <TextView
                android:id="@+id/text_qualification"
                style="@style/NormalText"
                android:text="MBBS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/layout_margin_top"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_doctor_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_9669893930"/>


            <ImageView
                android:id="@+id/img_doctor_delete"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/icon_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/img_doctor_edit"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/icon_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>



    </LinearLayout>




</android.support.v7.widget.CardView>