<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.planera.mis.planera2.SearchDateWiseInputActivity"
    tools:showIn="@layout/activity_search_date_wise_input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/BaseMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_gravity="center_vertical"
                style="@style/MediumTextBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start Date:"
                android:textColor="@color/colorGray" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_start_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_start_time"
                style="@style/MediumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_gravity="center_vertical"
                style="@style/MediumTextBlack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="End Date:"
                android:textColor="@color/colorGray" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_end_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_end_time"
                style="@style/MediumText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:background="@color/colorPrimary"
        style="@style/ButtonText"
        android:id="@+id/button_submit_for_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Submit" />

</RelativeLayout>
