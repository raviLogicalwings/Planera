<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextLayoutStyle">
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="BaseMargin">
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ButtonText">

        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CheckInButton">
        <item name="android:textSize">@dimen/tiny_text</item>
        <item name="android:background">@drawable/bg_check_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="InputEditTextStyle">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="rating_bar_doc" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">5</item>
        <item name="android:rating">3.5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginTop">4dip</item>
    </style>

    <!--Text Sizes-->
    <style name="ExtraLargeText">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ExtraLargeTextBlack">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="ExtraLargeTextBold">
        <item name="android:textSize">@dimen/extra_large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LargeText">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LargeTextBlack">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="LargeTextBold">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MediumText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MediumTextBlack">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MediumTextBold">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NormalText">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NormalTextBlack">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NormalTextBold">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CardViewStyle" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>

    </style>


    <style name="HomeCardStyle" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>

    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGray</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="material_card_style" parent="CardView">
        <item name="android:layout_marginTop">@dimen/standerd_top_margin</item>

    </style>


    <style name = "no_data_text_view">
        <item  name = "android:layout_width">wrap_content</item>
        <item  name = "android:layout_height">wrap_content</item>
        <item  name = "android:text">@string/no_data_available</item>
        <item  name = "android:padding">2dp</item>
        <item  name = "android:layout_gravity">center</item>
        <item  name = "android:gravity">center</item>
        <item  name = "android:textStyle">bold</item>
        <item  name = "android:textColor">@color/colorGray</item>
    </style>

    <style name="bad_emo">
        <item name ="android:layout_marginTop">10dp</item>
        <item name ="android:src">@drawable/ic_mood_normal</item>
        <item name ="android:layout_height">20dp</item>
        <item name ="android:layout_width">20dp</item>
        <item name ="android:layout_gravity">center</item>
    </style>
    <style name="FullScreenDialogStyle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="normalButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
</resources>
